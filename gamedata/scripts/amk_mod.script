--' gg_need_sleep		- одна единица == 6 минут (0.1 часа) (бодрствования)
--' gg_need_sleep_nrg	- одна единица == 1 час ("занятый" энергетиками у сна)
local k_sleep = 2.5		-- один час сна даёт два с половиной часа бодрствования
function reduce_need_sleep(time)	-- in hours
--	log("# reduce_need_sleep: "..time)
	local tmp = amk.load_variable("gg_need_sleep_nrg",0)
	amk.save_variable("gg_need_sleep_nrg", math.max(tmp - time, 0))
	time = time - tmp
--	log("gg_need_sleep_nrg: time = %f", time)

	tmp=amk.load_variable("gg_need_sleep",0)
	tmp = tmp - time*k_sleep*10
	if tmp<0 then tmp=0 end
	amk.save_variable("gg_need_sleep",tmp)
	test_sleep_pp(tmp)
--	log("gg_need_sleep = %f",tmp)
end

function test_for_need_sleep()
	if not sleep_manager.is_sleep_active() then
		-- одна единица этой переменной содержит 6 игровых минут бодрствования
		local v = amk.load_variable("gg_need_sleep",0) + 1
		amk.save_variable("gg_need_sleep", v)
		test_sleep_pp(v)
	--	log("test_for_need_sleep: %f", v)
	end
	amk.g_start_timer("gg_need_sleep",0,0,6)
end

function test_sleep_pp(val)
	local tmp = val/10	-- в часах для наглядности

	if tmp>36 then		-- не спали 36 часов - вырубаемся на пять часоов + время, "занятое" энергетиками
		sleep_manager.main(5+amk.load_variable("gg_need_sleep_nrg",0))
		return
	end

	local f = level.has_pp_effector(999)
	if tmp>30 and f==0 then		-- не спали 30 часов - начинается муть в глазах
		level.add_pp_effector("yantar_underground_psi.ppe", 999, true)
		level.set_pp_effector_factor(999, 5.0)  
	elseif tmp<=30 and f~=0 then
		level.remove_pp_effector(999)
	end
end

function test_for_need_sleep_nrg()
	local n=amk.load_variable("gg_need_sleep_nrg",0)
	if n<3 then
		amk.save_variable("gg_need_sleep_nrg",n+1)
		local v = amk.load_variable("gg_need_sleep",0) - 30 + n*10
		amk.save_variable("gg_need_sleep", v) 
		test_sleep_pp(v)
	else
		amk.send_tip("Что-то уже не особо помогает энергетик, надо бы отдохнуть...",db.actor:character_name(),5,8,"str")
	end
	amk.remove_timer("block_sleep_menu")
	amk.g_start_timer("block_sleep_menu",0,1,0)
end

