-- случайно вvбирает результат, возвра ает таблицу с секциями результатов
function af_select_result(v_udachi, v_virogd, virogd, cel, komp)
	local rnd=math_random(0,100)
	if rnd > v_udachi then --неудача
		if rnd > v_virogd + v_udachi then -- отторжение
			return komp, false
		else -- вvрождение
			return virogd, false
		end
	else -- удача
		return cel, true
	end
end

-- запускаем трансофрмацию 
-- результаты могут быть многочисленны (несколько целей, полное отторжение компонентов, несколько вырождений)
local transform_params = nil

function as_start_universal_transform_timer(rec_name, result, udacha, pos, vremya, gv, lv, info_portion, remove_anomaly_id)
	-- сохраняемые данные
	if transform_params == nil then
		transform_params = xr_logic.pstor_get_custom(db.actor, "af_var", "af_var")
	end

	if rec_name == info_portion then
		info_portion = nil
	end
	-- для возможности запускать несколько варок по одному и тому же рецепту...
	local i = 0
	local var = rec_name
	while transform_params[var]~=nil do
		var = rec_name..":"..i
		i = i + 1
	end
	transform_params[var] = {
		result	= result or {},
		udacha	= udacha,
		pos		= pos,
		gv		= gv,
		lv		= lv,
		info	= info_portion,
		rem_anom = remove_anomaly_id,
	}
	xr_timers.start_game_timer("af_transform_universal", vremya[1], vremya[2], vremya[3], var)
end

-- завершаем варку/мутацию
-- может быть много результатов
function af_transform_universal_end(var)
	if transform_params == nil then
		transform_params = xr_logic.pstor_get_custom(db.actor, "af_var", "af_var")
	end
	local params = transform_params[var]
		or abort("af_transform_universal_end: not found params for transform: %s", utils.to_str(var))

	local rec_name = string.match(var, "^([^:]+)")
	-- если есть результаты
	if table.size(params.result) > 0 then
		if db.actor:position():distance_to(params.pos) < 15 then
			level.add_pp_effector("teleport.ppe", 1524, false)
		end

		-- формируем строку с названиями компонентов
		local komp = {}
		for k,v in pairs(anom_recept_komp.anomalii) do
			if v['recepti'] and v['recepti'][rec_name] then
				for sect in pairs(v['recepti'][rec_name]['komp']) do
					table.insert( komp, game.translate_string(get_inv_name(sect)) )
				end
				break
			end
		end
		local from_komp = table.concat(komp, ", ")
		
		-- спавним результат(ы)
		local obj
		for sect in pairs(params.result) do
			obj = alife():create(sect, params.pos:add(vector():set(0,1,0)), params.lv, params.gv)
			obj = alife():object(obj.id)
			obj:use_ai_locations(false)
			obj.is_transformed = true
			amk.add_spot_on_map(obj.id, "red_location", game.translate_string("trans_finished_title").." из %c[255,255,0,0]"..from_komp)
			
			if params.udacha and string_find(sect, "^af_") then
				archievements.acv_count_event("acv_art", 100, "Сварщик")
				actor_stats.add_points( "artefacts_2", get_inv_name(sect), 1, 1 )
				xr_statistic.add_actor_rank( xr_statistic.get_af_rank(sect) )
			end
			xr_statistic.set_id( obj.id, true )
		end
	
		amk.send_tip(game.translate_string("trans_finished_title").." из %c[255,255,0,0]"..from_komp)
	end
	
	-- даём инфопорцию, если есть
	local info = params.info or rec_name
	if db.actor:dont_has_info(info) then
		db.actor:give_info_portion(info)
	end
	
	-- удаляем аномалии, если нужно и она не в исключениях
	-- код взят из amk_anoms.turn_off_all()
	if params.rem_anom then
		local sobj = alife():object(params.rem_anom)
		if sobj and game_graph():valid_vertex_id(sobj.m_game_vertex_id) then
			local map = alife():level_name(game_graph():vertex(sobj.m_game_vertex_id):level_id())
			if not amk_anoms.check_exclusion(sobj, map) then
				amk_anoms.set_online_anomaly_status(sobj.id, "del")
				alife():release(sobj, true)
			end
		end
	end

	transform_params[var] = nil
	if table.size(transform_params) == 0 then
		xr_logic.pstor_clear_custom(db.actor, "af_var")
		transform_params = nil
	end
end

