	local vv = amk.load_variable("gg_need_sleep",0) + (v or 3)
	amk.save_variable("gg_need_sleep", vv) 
	-- test_sleep_pp(vv)
end

function test_for_need_sleep_matras()
	amk.spawn_item_in_inv("matras")

	local actor = db.actor
	
	-- Проверка на врагов
	local actorPos = actor:position()
	for npcId, obj in pairs(db.creatures) do
		if obj and obj:alive()
			and obj:position():distance_to(actorPos) < 70 and obj:see(actor)
			and ( ( IAmAStalker[obj:clsid()] and obj:relation(actor)==game_object.enemy )
			or IAmAMonster[obj:clsid()] )
		then
			amk.send_tip(game.translate_string("not_need_sleep_enemy"),nil,nil,5,"nano")
			return false
		end
	end

	-- Проверка на выброс
	local v = amk.load_variable("blowout",-1)
	if v>-1 and v<5 then
		amk.send_tip(game.translate_string("blowout_not_sleep"),nil,nil,5,"nano")
		return false
	-- Проверка на "Час ужаса"
	elseif has_alife_info("horror_time_begin") then
		amk.send_tip(game.translate_string("not_need_sleep_in_hell"),nil,nil,5,"nano")
		return false
	-- Энергетики
	elseif amk.has_timer("block_sleep_menu") then
		amk.send_tip(game.translate_string("not_need_sleep_nrg"),nil,nil,5,"nano")
		return false
	end

	-- Проверим, хотим ли спать.
	-- Одна единица переменной gg_need_sleep равна 6 игровым минутам.
	-- Если полностью выспались, то не можем спать полчаса.
	if has_alife_info("snp_shadows_start") and not has_alife_info("snp_shadows_done") then
		v = 300
	else
		v = amk.load_variable("gg_need_sleep",0) + amk.load_variable("gg_need_sleep_nrg",0)*10
	end
	v = v/k_sleep
--	log1("##gg_need_sleep: "..v)
	if v > 1/6 then		-- можно ли хотя бы вздремнуть 10 минут
		-- звуковое сопровождение
		local snd = xr_sound.get_safe_sound_object("zwuk\\inv_sleeping")
		snd:play_no_feedback(actor, sound_object.s2d, 0, vector(), 2.0)
		local spwn=ui_sleep_menu.UISleepWnd(v)
		level.start_stop_menu(spwn,true)
		return true
	else
		amk.send_tip(game.translate_string("not_need_sleep"),nil,nil,5,"nano")
		return false
	end
end

