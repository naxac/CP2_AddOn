;----------- ЗВУК КОСТРА-----------------------

[zone_flame_small_stove]
GroupControlSection			= spawn_group_zone
$spawn 						= "zones\campfire"
$prefetch 					= 16
class						= Z_MBALD

hit_impulse_scale			= 0.0
effective_radius			= 0.0 ;размер радиуса в процентах от оригинального, где действует зона

ef_anomaly_type				= 1
ef_weapon_type				= 13

sound						= 
;postprocess					= postprocess_flame
	
artefacts					= 
BirthProbability 			= 0.0

;----------- Anomaly settings -----------------------
min_start_power		= 0.39
max_start_power		= 0.40
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

idle_particles				= destroy_fx\group_items\destroy_smoke_00
blowout_particles			= destroy_fx\group_items\destroy_smoke_00

hit_small_particles			= destroy_fx\group_items\destroy_smoke_00
hit_big_particles			= destroy_fx\group_items\destroy_smoke_00
idle_small_particles		= destroy_fx\group_items\destroy_smoke_00
idle_big_particles			= destroy_fx\group_items\destroy_smoke_00

idle_particles_dont_stop	= true;

idle_sound					= ambient\fire2		;постоянный звук
blowout_sound				= ambient\fire2		;во время выброса(удара) в центре аномалии	
hit_sound					= ambient\fire2		;на персонаже, когда тот получает хит
entrance_sound				= ambient\fire2		;при попадании объекта в аномалию

hit_type					= burn

disable_time				= 10000	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small			= -1	;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time			= 50000	;время отключения idle партиклов

ignore_nonalive				= true
ignore_small				= true
ignore_artefacts			= true

blowout_light				= off
light_color		    		= 0.0
light_animation             = koster
light_range		    		= 0
light_time 		    		= 0.0
light_height				= 0.0			;подъем источника света на высоту


idle_light					= off
idle_light_range			= 0.0
idle_light_range_delta 		= 0.0
idle_light_anim				= koster_00
idle_light_height			= 0.0			;подъем источника света на высоту

awaking_time				= 0
blowout_time				= 1000	
accamulate_time				= 0

visible_by_detector 		= off

blowout_wind				= off

blowout_wind_time_start 	= 0
blowout_wind_time_peak  	= 600
blowout_wind_time_end		= 899
blowout_wind_power			= 0.0			;сила поднимаего ветра (от 0 до 1), в момент blowout_wind_time_peak 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = off

