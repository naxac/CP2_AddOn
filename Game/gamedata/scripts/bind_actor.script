local weap_hide_tbl = {}
function need_hide_weapon()
	for k in pairs(weap_hide_tbl) do
		return true
	end
	return Actor:is_talking()
end

-- Weapon functions
function hide_weapon(v)
	weap_hide_tbl[v or -1] = true
end
function restore_weapon(v)
	weap_hide_tbl[v or -1] = nil
end

function fix_loaded_slot(slot)
	local s = (slot == inventory_slots.NO_ACTIVE_SET) and inventory_slots.NO_ACTIVE_GET or slot
	if Actor:active_slot() ~= s then
		Actor:activate_slot(slot)
		start_small_timer(500, this.fix_loaded_slot, slot)
	end
end

